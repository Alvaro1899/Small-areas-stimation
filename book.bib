author = {Zhang, Li-Chun and Giusti, Caterina},
publisher = {John Wiley & Sons, Ltd},
isbn = {9781118814963},
title = {Small Area Methods and Administrative Data Integration},
booktitle = {Analysis of Poverty Data by Small Area Estimation},
chapter = {4},
